---
import Layout from '../layouts/Layout.astro';
import AvatarImage from '../assets/avatar.webp';
import {Content as IndexContent} from '../content/index.md';
---

<Layout>
    <div class="container">
        <div id="heart-wrapper">
            <div class="heart">
                <img src={AvatarImage.src} alt="yude's avatar" class="avatar">
                <p class="name">yude</p>
            </div>
        </div>

        <svg width="200px" style="fill: lightgray; margin-top: -50px; margin-inline: auto; display: block" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640"><path d="M300.3 440.8C312.9 451 331.4 450.3 343.1 438.6L471.1 310.6C480.3 301.4 483 287.7 478 275.7C473 263.7 461.4 256 448.5 256L192.5 256C179.6 256 167.9 263.8 162.9 275.8C157.9 287.8 160.7 301.5 169.9 310.6L297.9 438.6L300.3 440.8z"/></svg>
    </div>
    <div class="content">
        <IndexContent />
    </div>

    <footer style="text-align: center;">
        <p>&copy; 2025 yude <code>&lt;i@yude.jp&gt;</code></p>
        <img src="https://moe-counter-cf.yude.workers.dev/yude.jp:home" height="100rem" />
    </footer>
</Layout>

<style>
    .container {
        margin-inline: auto;
        min-width: 320px;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .avatar {
        display: block;
        max-width: 100%;
        height: auto;
        opacity: 0.5;
    }

    @media (max-width: 768px) {
        .container {
            height: auto;
        }

        .container svg {
            display: none;
        }
    }

    .content {
        margin-inline: auto;
        min-width: 320px;
    }

    @keyframes heartbeat {
        0% { transform: scale(.95); }
        20% { transform: scale(.97); }
        30% { transform: scale(.95); }
        40% { transform: scale(1); }
        100% { transform: scale(.95); }
    }

    #heart-wrapper .heart {
        animation: heartbeat 1s infinite;
        max-width: 80vw;
        margin-inline: auto;
        position: relative;
    }

    .name {
        font-size: 3rem;
        font-family: "Asset", serif;
        position: absolute;
        right: 0.5rem;
        bottom: 0.5rem;
        color: black;
    }
</style>
